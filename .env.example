# ========================================
# ENTERSYS - Environment Variables Template
# ========================================
# Copia este archivo a:
# - .env.development (para desarrollo local)
# - .env.staging (para ambiente de testing)
# - .env.production (para producción)
#
# IMPORTANTE: NO incluir datos sensibles en este archivo
# Este archivo SÍ se sube a Git como referencia

# Modo de aplicación
VITE_APP_MODE=development
VITE_APP_ENV=development

# URLs Base
VITE_APP_URL=https://dev.entersys.mx
VITE_API_URL=https://dev.entersys.mx/api
VITE_SITE_URL=https://dev.entersys.mx

# Información de Contacto
VITE_WHATSAPP_NUMBER=52XXXXXXXXXX
VITE_CONTACT_EMAIL=contacto@entersys.mx
VITE_CONTACT_PHONE=+52 XX XXXX XXXX

# Analytics & Tracking
VITE_MATOMO_URL=https://analytics.example.com
VITE_MATOMO_SITE_ID=
VITE_MAUTIC_URL=https://mautic.example.com
VITE_ENABLE_ANALYTICS=false

# Social Media Links
VITE_FACEBOOK_URL=https://www.facebook.com/entersysmx
VITE_INSTAGRAM_URL=https://www.instagram.com/entersysmx
VITE_LINKEDIN_URL=https://www.linkedin.com/company/entersysmx
VITE_YOUTUBE_URL=https://www.youtube.com/@EntersysMX

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_SHOW_VERSION_INFO=true
VITE_ENABLE_ERROR_REPORTING=false

# SEO & Meta
VITE_SITE_NAME=Entersys
VITE_SITE_DESCRIPTION=Transformamos operaciones empresariales

# Performance Monitoring
VITE_ENABLE_WEB_VITALS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false
